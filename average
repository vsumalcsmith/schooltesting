import java.util.*;
import java.util.Scanner;


public class AverageOfThreeDoubles{
  public static void main(String [] args){
  
  Scanner input = new Scanner(System.in);
  
  System.out.println("enter value number one:");
  double number1 = input.nextDouble();
  
  System.out.println("enter value number two:");
  double number2 = input.nextDouble();
  
  System.out.println("enter value number three:");
  double number3 = input.nextDouble();
  
  
  
  double average = ( number1 + number2 + number3) / 3;
  System.out.println("the average of three numbers are " + average );
  
  
  }

}
